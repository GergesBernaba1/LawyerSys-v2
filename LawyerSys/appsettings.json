{
  "ConnectionStrings": {
    "DefaultConnection": "<set-via-user-secrets-or-env>"
  },
  "Jwt": {
    "Key": "",
    "Issuer": "LawyerSys",
    "Audience": "LawyerSysClient",
    "ExpireMinutes": 43200
  },
  "Email": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Secure": true,
    "User": "",
    "Password": "",
    "From": "",
    "FromName": "Qadaya"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/lawyersys-.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  "Reminders": {
    "Hearing": {
      "Enabled": true,
      "PollIntervalMinutes": 1,
      "LookAheadMinutes": 30,
      "GraceMinutes": 5,
      "MaxAttemptsPerRecipient": 3
    },
    "Task": {
      "Enabled": true,
      "PollIntervalMinutes": 1,
      "LookAheadMinutes": 30,
      "GraceMinutes": 5,
      "MaxAttemptsPerRecipient": 3
    }
  }
}
